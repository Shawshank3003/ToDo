<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AddTaskTableRowLayout">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:weightSum">6</item>
    </style>

    <style name="AddTaskTableRowTextView">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="AddTaskTableRowRadioGropup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">6</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AddTaskTableRowMiniToggleButton" parent="AppToggleButtonTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="AddTaskTableRowEditText">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="AddTaskTableRowImageButton">
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AddTaskTableRowButton">
        <item name="android:layout_weight">6</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>
</resources>
